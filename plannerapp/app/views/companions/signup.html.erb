

<h1 class = "heading">Signup</h1>

<%= form_for(@companion, url: signup_path) do |f|%>


<p>
  <%= f.text_field(:first_name, autofocus: true, placeholder: "firstname") %>
</p>
<p>
  <%= f.text_field(:last_name, autofocus: true, placeholder: "lastname") %>
</p>
<p>
  <%= f.text_field(:email, autofocus: true, placeholder: "email") %>
</p>
<p>
  <%= f.password_field(:password, required: true,placeholder: "password") %>
</p>
<p>
  <%= f.submit("Signup", class: "btn btn-primary") %>
</p>
  <%= link_to "Have an account already? Log in here", login_path %>
<% end %>